<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/option.xsd">
	<import>
		<categories>
			<category name="user.registration.gmailGuard">
				<parent>user.registration</parent>
			</category>
		</categories>

		<options>
			<!-- Main Enable/Disable -->
			<option name="gmail_guard_enabled">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>

			<!-- Detection Methods -->
			<option name="gmail_guard_pattern_check">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>

			<option name="gmail_guard_api_check">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>

			<option name="gmail_guard_api_key">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
			</option>

			<!-- Threshold -->
			<option name="gmail_guard_threshold">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>50</defaultvalue>
				<minvalue>10</minvalue>
				<maxvalue>100</maxvalue>
			</option>

			<!-- Action on Detection -->
			<option name="gmail_guard_action">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>verify</defaultvalue>
				<selectoptions>block
verify
moderate</selectoptions>
			</option>

			<!-- Logging Options -->
			<option name="gmail_guard_log_suspicious">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>

			<option name="gmail_guard_log_errors">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>

			<option name="gmail_guard_db_log">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>0</admindefaultvalue>
			</option>

			<!-- Notifications -->
			<option name="gmail_guard_notification_email">
				<categoryname>user.registration.gmailGuard</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
			</option>
		</options>
	</import>
</data>
